<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xyhc.cms.dao.CommodityCommentReplyDao">


    <select id="page" resultType="com.xyhc.cms.entity.CommodityCommentReplyEntity">
        SELECT *
        FROM commodity_comment_reply T
        where 1=1 and is_delete=0
        <if test="params.name!= null and params.name !=''">
            and T.name like '%${params.name}%'
        </if>

    </select>

    <select id="all" resultType="com.xyhc.cms.entity.CommodityCommentReplyEntity">
        SELECT *
        FROM commodity_comment_reply T
        where 1=1 and is_delete=0
        <if test="params.name!= null and params.name !=''">
            and T.name like '%${params.name}%'
        </if>

    </select>

</mapper>